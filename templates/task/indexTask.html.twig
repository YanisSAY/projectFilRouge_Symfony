{% extends 'base.html.twig' %}

{% block title %}Task index{% endblock %}

{% block body %}
    <h1>Task index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NameTask</th>
                <th>StatusTask</th>
                <th>BeginDate</th>
                <th>EndDate</th>
                <th>IsFinishedTask</th>
                <th>IsSuccessTask</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for task in tasks %}
            <tr>
                <td>{{ task.id }}</td>
                <td>{{ task.nameTask }}</td>
                <td>{{ task.statusTask }}</td>
                <td>{{ task.beginDate ? task.beginDate|date('Y-m-d') : '' }}</td>
                <td>{{ task.endDate ? task.endDate|date('Y-m-d') : '' }}</td>
                <td>{{ task.isFinishedTask ? 'Yes' : 'No' }}</td>
                <td>{{ task.isSuccessTask ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_task_show', {'id': task.id}) }}">show</a>
                    <a href="{{ path('app_task_edit', {'id': task.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_task_new') }}">Create new</a>
{% endblock %}

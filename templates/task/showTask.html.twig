{% extends 'base.html.twig' %}

{% block title %}Task{% endblock %}

{% block body %}
    <h1>Task</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ task.id }}</td>
            </tr>
            <tr>
                <th>NameTask</th>
                <td>{{ task.nameTask }}</td>
            </tr>
            <tr>
                <th>StatusTask</th>
                <td>{{ task.statusTask }}</td>
            </tr>
            <tr>
                <th>BeginDate</th>
                <td>{{ task.beginDate ? task.beginDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>EndDate</th>
                <td>{{ task.endDate ? task.endDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>IsFinishedTask</th>
                <td>{{ task.isFinishedTask ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>IsSuccessTask</th>
                <td>{{ task.isSuccessTask ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_task_index') }}">back to list</a>

    <a href="{{ path('app_task_edit', {'id': task.id}) }}">edit</a>

    {{ include('task/_delete_form.html.twig') }}
{% endblock %}
